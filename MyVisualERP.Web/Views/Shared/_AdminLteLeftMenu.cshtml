@*
    This partial controls the left menu of the AdminLTE dashboard and is called automatically by _AdminLteLayout
       This is where you can add, modify, or remove navigation options in your app
       TODO: This preserves the links as-is for the demo, which lead to broken pages!
       It's up to you to make sure these links either get deleted or lead somewhere REAL!
*@

@using Microsoft.AspNet.Identity

@{
    Layout = null;
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        @if (Request.IsAuthenticated)
        {
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/content/img/hf.jpg" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p>@String.Format(User.Identity.GetUserName())</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/content/img/default_avatar_male.jpg" class="img-circle" alt="User Image" />
                </div>
                <div class="pull-left info">
                    <p class="text-danger">Not Logged In</p>
                    <a href="#"><i class="fa fa-circle text-danger"></i> Offline</a>
                </div>
            </div>
        }

        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search..." />
                <span class="input-group-btn">
                    <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="active treeview">
                <a href="/Home">
                    <i class="fa fa-home"></i> <span>Dashboard</span>
                </a>
            </li>

            @if (Request.IsAuthenticated)
            {
                 <!-- #region Menu Login -->
                <li class="treeview">
                    <a href="/Account/Register">
                        <i class="fa fa-lock"></i>
                        <span>Register</span>
                    </a>
                </li>
            <!-- #endregion -->

            <!-- #region Menu Contoh -->
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-line-chart"></i>
                            <span>Contoh Menu (Level 1)</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#"><i class="fa fa-circle-o"></i> Contoh Menu (Level 2)</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Contoh Menu (Level 2)</a></li>
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-circle-o"></i> Contoh Menu (Level 2)
                                    <i class="fa fa-angle-double-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="#"><i class="fa fa-circle-o text-danger"></i> Contoh Menu (Level 3)</a></li>
                                    <li><a href="#"><i class="fa fa-circle-o text-danger"></i> Contoh Menu (Level 3)</a></li>
                                    <li><a href="#"><i class="fa fa-circle-o text-danger"></i> Contoh Menu (Level 3)</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
            <!-- #endregion -->
           


                    <li class="header">Tools</li>
                    <li><a href="#"><i class="fa fa-circle-o text-danger"></i> <span>Transload</span></a></li>
                    <li><a href="#"><i class="fa fa-circle-o text-warning"></i> <span>Transgender</span></a></li>
                    <li><a href="#"><i class="fa fa-circle-o text-info"></i> <span>TransJakarta</span></a></li>
            }


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>